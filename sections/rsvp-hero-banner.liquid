<div class="hero_slider_content">
  {% for block in section.blocks %}
  <div class="rsvp_hero_banner banner_{{ forloop.index }}">
    <div class="container">
       <div class="row">
           <div id="bg-content" class="col-md-8 offset-sm-2">
           </div>
       </div>
      </div>
          <style>
              #rsvp_hero_banner .container {
                width: 1320px !important;
              }
              .rsvp_hero_banner.banner_{{ forloop.index }} .container .row #bg-content{
                  background-image: url({{ block.settings.background_image | img_url: 'master' }});
                    background-position: center !important;
                    height: 300px !important;
                    background-color: #ffffff !important;
                    background-repeat: no-repeat !important;
                    align-items: center;
                    background-size: 97% !important;
              }
              @media (min-width: 768px) {
                  .content {
                      {{ block.settings.desktop_banner_content_position }}
                  }
              }
              @media (max-width: 767px) {
                  .rsvp_hero_banner.banner_{{ forloop.index }} .container .row #bg-content{
                      background-image: url({{ block.settings.background_image_mobile | img_url: 'master' }});
                      background-position: center !important;
                      height: 125px !important;
                      background-color: #ffffff !important;
                      background-repeat: no-repeat !important;
                      align-items: center;
                  }
                  .content {
                      {{ block.settings.banner_content_position }}
                  }
                   .siteAlert a.announcement-bar.announcement-bar--link p {
                        text-align: center !important;
                        }

          </style>
    </div>
  </div>
  {% endfor %}
</div>
{% schema %}
{
	"name": "Home hero section",
	"settings": [
		
	],
	"blocks": [
		{
			"type": "gallery_image",
			"name": "Banner Slide",
			"settings": [
				{
                  "type": "image_picker",
                  "id": "background_image",
                  "label": "Background Image"
                },
                {
                  "type": "image_picker",
                  "id": "background_image_mobile",
                  "label": "Background Mobile Image"
                },
                {
                    "type": "text",
                    "id": "title",
                    "label": "Title",
                    "default": "Revamp Your Regimen Kit"
                },
                {
                    "type": "textarea",
                    "id": "short_text",
                    "label": "Text",
                    "default": "Give your skincare routine a makeover"
                },
                {
                  "type": "color",
                  "id": "text_color",
                  "label": "Text Color",
                  "default": "#000000"
                },
                {
                    "type": "text",
                    "id": "cta",
                    "label": "Button label"
                },
                {
                    "type": "color",
                    "label": "CTA color",
                    "id": "banner_cta_color",
                    "default": "#000000"
                },
                {
                    "type": "url",
                    "id": "link",
                    "label": "Button link"
                },
                {
                   "type": "select",
                   "id": "desktop_banner_content_position",
                   "options": [
                      { "value": "float: left !important;", "label": "Left"},
                      { "value": "margin-left: 48.4% !important;", "label": "Center"},
                      { "value": "float: right !important;", "label": "Right"}
                   ],
                   "label": "Content Position on Desktop",
				   "default": "float: right !important;"
                },
				{
                   "type": "select",
                   "id": "banner_content_position",
                   "options": [
                      { "value": "padding: 0px 0 550px !important;", "label": "Top"},
                      { "value": "padding: 190px 0 190px !important;", "label": "Center"},
                      { "value": "padding: 322px 0 55px !important;", "label": "Bottom"}
                   ],
                   "label": "Content Position on Mobile",
				   "default":   "padding: 322px 0 55px !important;"
                }
			]
		}
	],
	"presets": [
		{
            "category": "Banner",
            "name": "Home Hero banner",
			"blocks": [
				{
					"type": "gallery_image"
				},
				{
					"type": "gallery_image"
				},
				{
					"type": "gallery_image"
				}
			]
		}
	]

}
{% endschema %}
